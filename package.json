{
  "name": "javauml",
  "displayName": "JavaUML",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./src/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-extension-app.saveSettings",
        "title": "Save Settings"
      },
      {
        "command": "vscode-extension-app.loadSettings",
        "title": "Load Settings"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "javaumlView",
          "name": "JavaUML",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "javauml.settings.sourceFolder": {
          "type": "string",
          "default": "",
          "description": "The source folder location for the project."
        },
        "javauml.settings.outputLocation": {
          "type": "string",
          "default": "",
          "description": "The output location for writing files."
        }
      }
    }
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1"
  },
  "dependencies": {
    "java-parser": "^3.0.1"
  }
}
